<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#FFFFF0] h-screen flex items-center justify-center">

  <div class="bg-white p-6 rounded-lg shadow-lg w-80">
    <h2 class="text-2xl font-bold text-center mb-4">Reset Password</h2>

    <% if(typeof error !== 'undefined' && error) { %>
    <p class="text-red-500"><%= error %></p>
    <% } %>


    <form action="/reset-password" method="POST" class="flex flex-col gap-3">
      <input type="hidden" name="token" value="<%= token %>">

        <div class="flex justify-between rounded p-2 border w-full">
            <input id="newPassword" name="password" type="password" placeholder="New Password" class="border-none outline-none" required/>
            <span class="cursor-pointer" id="newPasswordToggle" onclick="togglePassword('newPassword', 'newPasswordToggle')">show</span>
        </div>
      <button class="bg-blue-500 text-white py-2 rounded hover:scale-105 transition">
        Reset Password
      </button>
    </form>

  </div>

  <script>
        let showPassword = {};

        function togglePassword(inputId, toggleId) {
            showPassword[inputId] = !showPassword[inputId];

            const input = document.getElementById(inputId);
            const text = document.getElementById(toggleId);

            input.type = showPassword[inputId] ? "text" : "password";
            text.innerText = showPassword[inputId] ? "hide" : "show";
        }
    </script>
</body>
</html>
